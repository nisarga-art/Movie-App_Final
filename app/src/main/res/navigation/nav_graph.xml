<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/userListFragment">

    <!-- ... (userListFragment and addUserFragment are unchanged) ... -->
    <fragment
        android:id="@+id/userListFragment"
        android:name="com.example.movieapp.ui.user.UserListFragment"
        android:label="Users"
        tools:layout="@layout/fragment_user_list">
        <action
            android:id="@+id/action_userListFragment_to_addUserFragment"
            app:destination="@id/addUserFragment" />
        <action
            android:id="@+id/action_userListFragment_to_movieListFragment"
            app:destination="@id/movieListFragment" />
    </fragment>
    <fragment
        android:id="@+id/addUserFragment"
        android:name="com.example.movieapp.ui.user.AddUserFragment"
        android:label="Add User"
        tools:layout="@layout/fragment_add_user" />

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.example.movieapp.ui.movie.MovieListFragment"
        android:label="Trending Movies"
        tools:layout="@layout/fragment_movie_list">
        <!-- NEW ACTION: Navigate from movie list to movie detail -->
        <action
            android:id="@+id/action_movieListFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>

    <!-- NEW FRAGMENT DESTINATION FOR MOVIE DETAIL -->
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.example.movieapp.ui.movie.MovieDetailFragment"
        android:label="Movie Details"
        tools:layout="@layout/fragment_movie_detail">
        <!-- This fragment accepts an integer argument named "movieId" -->
        <argument
            android:name="movieId"
            app:argType="integer" />
    </fragment>

</navigation>